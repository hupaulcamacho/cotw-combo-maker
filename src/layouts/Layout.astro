---
import "@fontsource/racing-sans-one";

interface Props {
  title: string;
}

let year = new Date().getFullYear();

let description =
  "Create Fatal Fury: COTW combos and share them as a URL, plain text with multiple notations, emoji, or even image. スト６のコンボを入力し、URL、文字、絵文字、または画像として共有しましょう！";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:image" content="/cover.jpg" />
    <meta property="twitter:image" content="/cover.jpg" />

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://combos.sf6.combolab.app/" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta
      property="og:image"
      content="https://combos.sf6.combolab.app/cover.jpg"
    />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="combos.sf6.combolab.app" />
    <meta property="twitter:url" content="https://combos.sf6.combolab.app/" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta
      name="twitter:image"
      content="https://combos.sf6.combolab.app/cover.jpg"
    />

    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/apple-touch-icon.png?v=2"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/favicon-32x32.png?v=2"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/favicon-16x16.png?v=2"
    />
    <link rel="shortcut icon" href="/favicon.ico?v=2" />
    <meta name="apple-mobile-web-app-title" content="Fatal Fury: COTW Combo Maker" />
    <meta name="application-name" content="Fatal Fury: COTW Combo Maker" />
    <meta name="msapplication-TileColor" content="#D5F379" />
    <meta name="theme-color" content="#000000" />
  </head>
  <body class="flex min-h-screen flex-col bg-black">
    <div
      class="flex-grow bg-[linear-gradient(rgba(0,0,0,0.3),rgba(0,0,0,1)),url('/bg.jpg')] bg-cover bg-center bg-no-repeat"
    >
      <slot />
    </div>
    <footer
      class="mx-auto my-10 max-w-lg px-8 text-center text-xs text-sky-200 drop-shadow-sm"
    >
      <p>
        Made by <a class="text-orange-500" href="https://combolab.app"
          >Combolab</a
        >. If you have any feedback please reach out on <a
          href="https://x.com/combolabapp"
          class="text-orange-500">X</a
        >.
      </p>
      <p class="mt-2 opacity-50">
        The FATAL FURY CITY OF THE WOLVES name is a registered trademark or trademark of
        SNK CORPORATION. Combolab is not affiliated with, endorsed, sponsored, or
        specifically approved by SNK CORPORATION. Background art by <a
          class="text-orange-500"
          href="https://www.artstation.com/artwork/G8G84V">Jason Stauffer</a
        >.
      </p>
      <br />
      <br />
      Four Rays © {year} — All rights reserved.
    </footer>
  </body>
</html>
